[Unit]
Description=Rovercode Daemon Service
After=network.target syslog.target docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
User=root
Group=root
ExecStartPre=-/usr/bin/docker stop rovercode
ExecStartPre=-/usr/bin/docker rm rovercode
ExecStart=-/usr/bin/docker run --name rovercode --privileged -v /dev:/dev -v /opt/rovercode:/var/rovercode rovercode
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
Alias=rovercode.service
